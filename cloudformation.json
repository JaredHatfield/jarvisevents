{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "jarvisevents Lambda",
  "Parameters": {
    "S3Bucket": {
      "Description": "S3 Bucket",
      "Type": "String"
    },
    "S3Key": {
      "Description": "S3 Key",
      "Type": "String"
    },
    "MemorySizeLambda": {
      "AllowedValues": [
        128,
        192,
        256,
        320,
        384,
        448,
        512,
        576,
        640,
        704,
        768,
        832,
        896,
        960,
        1024,
        1088,
        1152,
        1216,
        1280,
        1344,
        1408,
        1472,
        1536
      ],
      "Default": 128,
      "Description": "Lambda Memory Size",
      "Type": "Number"
    },
    "TimeoutLambda": {
      "Description": "Lambda Timeout",
      "Default": 60,
      "MaxValue": 300,
      "MinValue": 1,
      "Type": "Number"
    }
  },
  "Resources": {
    "JarvisEventsDynamoDBTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "deviceId",
            "AttributeType": "S"
          },
          {
            "AttributeName": "dateTime",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "deviceId",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "dateTime",
            "KeyType": "RANGE"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 1,
          "WriteCapacityUnits": 1
        },
        "TableName": "jarvisevents"
      }
    },
    "JarvisEvents": {
      "Type": "AWS::Lambda::Function",
      "DependsOn": [
        "JarvisEventsDynamoDBTable"
      ],
      "Properties": {
        "Description": "jarvisevents",
        "Code": {
          "S3Bucket": {
            "Ref": "S3Bucket"
          },
          "S3Key": {
            "Ref": "S3Key"
          }
        },
        "Handler": "com.unitvectory.jarvisevents.JarvisEventHandler::handleRequest",
        "MemorySize": {
          "Ref": "MemorySizeLambda"
        },
        "Role": {
          "Fn::GetAtt": [
            "JarvisEventsRole",
            "Arn"
          ]
        },
        "Runtime": "java8",
        "Timeout": {
          "Ref": "TimeoutLambda"
        }
      }
    },
    "JarvisEventsPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "JarvisEventsPolicy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": "arn:aws:logs:*:*:*"
            },
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:GetItem",
                "dynamodb:BatchGetItem",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem",
                "dynamodb:BatchWriteItem"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    ":",
                    [
                      "arn",
                      "aws",
                      "dynamodb",
                      {
                        "Ref": "AWS::Region"
                      },
                      {
                        "Ref": "AWS::AccountId"
                      },
                      "jarvisevents"
                    ]
                  ]
                }
              ]
            }
          ]
        },
        "Roles": [
          {
            "Ref": "JarvisEventsRole"
          }
        ]
      }
    },
    "JarvisEventsRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    }
  }
}
